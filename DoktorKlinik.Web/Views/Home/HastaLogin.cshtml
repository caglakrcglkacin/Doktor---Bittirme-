@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@model LoginViewModel
@if(ViewBag.Hata != null){

          <div class="alert alert-danger">
            @Html.Raw(ViewBag.Hata)
         </div>
   
    }
<div class="login-wrapper">
    <div class="back-link">
        <a href="index.html" class="btn btn-success">Anasayfa</a>
    </div>
    <div class="container-center">
        <div class="panel panel-bd">
            <div class="panel-heading">
                <div class="view-header">
                    <div class="header-icon">
                        <i class="pe-7s-unlock"></i>
                    </div>
                    <div class="header-title">
                        <h3>Login</h3>
                        <small><strong>Please enter your credentials to login.</strong></small>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <form action="/Home/HastaLogin" method="post" novalidate>
                    <div class="form-group">
                        <label class="control-label" for="username">Kullanıcı Adı</label>
                        <input type="text" placeholder="example@gmail.com" title="Please enter you username" asp-for="KullaniciAdı" class="form-control">
                        <span class="help-block small">Kullanıcı Adını Giriniz</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="password">Şifre</label>
                        <input type="password" title="Please enter your password" placeholder="******" required="" asp-for="Password" class="form-control">
                        <span class="help-block small">Şifreniz.</span>
                    </div>
                    <div class="form-grou">
                        <input type="checkbox" asp-for="RembemberMe" class="mdl-button mdl-js-button mdl-js-ripple-effect button button-primary">
                        <label class="control-label">Beni Hatırla <em> *</em></label>
                    </div>
                    <div>
                        <button class="btn btn-primary">Giriş</button>
                        <a class="btn btn-warning" href="/Home/HastaRegister">Register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>