@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@model UserDto
@if (ViewBag.Hata != null)
{

    <div class="alert alert-danger">
        @Html.Raw(ViewBag.Hata)
    </div>

}
<div class="login-wrapper">
    <div class="back-link">
        <a href="index.html" class="btn btn-success">Back to Dashboard</a>
    </div>
    <div class="container-center lg">
        <div class="panel panel-bd">
            <div class="panel-heading">
                <div class="view-header">
                    <div class="header-icon">
                        <i class="pe-7s-unlock"></i>
                    </div>
                    <div class="header-title">
                        <h3>Kayıt Ol</h3>
                        <small><strong>Lütfen Doğru Bilgileri Giriniz</strong></small>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <form action="/Home/HastaRegister" method="post">
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Username</label>
                            <input type="text" value="" id="username" class="form-control" asp-for="UserName" >
                            <span class="help-block small">Kullanıcı Adı Giriniz</span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Adınız</label>
                            <input type="text" class="form-control" asp-for="Name" >
                            <span class="help-block small">Adınızı Giriniz</span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Soyadınız</label>
                            <input type="text"e" class="form-control" asp-for="Surname" >
                            <span class="help-block small">Soyadınızı Giriniz</span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Kimlik No</label>
                            <input type="text"  class="form-control" asp-for="IdentityNumber" >
                            <span class="help-block small">Kimlik Numarasını Giriniz</span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Şifre</label>
                            <input type="password" class="form-control" asp-for="NewPassword">
                            <span class="help-block small">Şifre Oluşturun. 8 karakterli 1 Büyük harf ve noktalama işareti içersin</span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Şifre Tekrar</label>
                            <input type="password" value=""  class="form-control" asp-for="NewPasswordAgin" >
                            <span class="help-block small">Şifre Oluşturun. 8 karakterli 1 Büyük harf ve noktalama işareti içersin</span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Email Address</label>
                            <input type="text" value=""  class="form-control"  asp-for="Email">
                            <span class="help-block small">Email Adresiniz</span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Doğum Tarihi</label>
                            <input type="datetime-local"  class="form-control" asp-for="BirthDate">
                            <span class="help-block small">Doğum Tarihiniz</span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Cinsiyetiniz</label>
                            <select class="form-control" asp-items="Model.GendersList" asp-for="GenderId">
                                <option>.:: Lütfen Seçiniz ::.</option>
                            </select>
                            <span class="help-block small">Cinsiyetiniz</span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Telefon</label>
                            <input type="text"  class="form-control" asp-for="Phone">
                            <span class="help-block small">Telefon Numaranız</span>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-warning">Kaydet</button>
                        <a class="btn btn-primary" href="/Home/HastaLogin">Giriş Yap</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>