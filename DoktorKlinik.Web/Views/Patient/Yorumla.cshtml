@{
    Layout = "~/Views/Shared/_LayoutDoctorAdmin.cshtml";
}

@model DoctorCommentDto
<section class="content">
    <div class="row">
        <!-- Form controls -->
        <div class="col-sm-12">
            <div class="panel panel-bd lobidrag">
                <div class="panel-heading">
                    <div class="btn-group">
                        <a class="btn btn-primary" href="table.html"> <i class="fa fa-list"></i>  Department List</a>
                    </div>
                </div>
                <div class="panel-body">
                    <form class="col-sm-6" action="/Patient/Yorumla" method="post">
                        <div class="form-group">
                            <label>Department Name</label>
                            <input type="text" class="form-control" placeholder="Enter First Name" value="@ViewBag.Adı" readonly>
                        </div>
                        <div class="form-group">
                            <label>Department Name</label>
                            <input type="hidden" class="form-control" placeholder="Enter First Name" asp-for="AppointmentId" value="@ViewBag.RandevuId">
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control" id="exampleTextarea" asp-for="Comment" rows="3"></textarea>
                        </div>
                        <div class="reset-button">
                            <button class="btn">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
